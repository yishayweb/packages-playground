{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": ">=7.13.0 <8.0.0",
    "@chromatic-com/storybook": "^3.2.2",
    "@commitlint/cli": "^16.0.1",
    "@commitlint/config-conventional": "^16.0.0",
    "@storybook/addon-essentials": "^8.4.1",
    "@storybook/addon-interactions": "^8.4.1",
    "@storybook/blocks": "^8.4.1",
    "@storybook/manager-api": "^8.4.1",
    "@storybook/react": "^8.4.1",
    "@storybook/react-vite": "^8.4.1",
    "@storybook/test": "^8.4.1",
    "@storybook/theming": "^8.4.1",
    "@types/node": "^18.7.14",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "@vitejs/plugin-react": "^4.3.3",
    "commitizen": "^4.2.4",
    "css-loader": "^6.7.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "globals": "^15.11.0",
    "husky": "^8.0.0",
    "lint-staged": "^12.1.3",
    "only-allow": "^1.1.1",
    "prettier": "^2.5.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "require-from-string": "^2.0.2",
    "rimraf": "^5.0.5",
    "sass": "^1.62.0",
    "sass-loader": "^13.2.2",
    "storybook": "^8.4.1",
    "style-loader": "^3.3.2",
    "typescript": "^4.5.4",
    "vite": "^5.4.10"
  },
  "scripts": {
    "pre-commit": "lint-staged",
    "commit": "pnpm git-cz",
    "commit-msg": "pnpm commitlint --edit $1",
    "prepare": "husky install",
    "workspace-build": "pnpm run -r build",
    "release-packages": "pnpm run workspace-build && changeset publish",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "changeset-empty": "changeset --empty",
    "preinstall": "npx only-allow pnpm",
    "refresh-workspace-deps": "pnpm run -r delete-deps && rimraf ./node_modules && pnpm install",
    "eslint-run": "eslint --fix --max-warnings=0"
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx}": [
      "eslint --fix --max-warnings=0",
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "engines": {
    "node": "20.18.0"
  },
  "dependencies": {
    "@changesets/cli": "^2.23.0"
  },
  "peerDependencies": {
    "@babel/core": ">=7.13.0 <8.0.0",
    "css-loader": "^6.7.3",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "require-from-string": "^2.0.2",
    "sass": "^1.62.0",
    "sass-loader": "^13.2.2",
    "style-loader": "^3.3.2"
  }
}
